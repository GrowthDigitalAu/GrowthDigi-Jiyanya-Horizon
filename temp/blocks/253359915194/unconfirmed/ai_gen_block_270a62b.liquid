{% doc %}
  @prompt
    join our newsletter section with email option gav em eoption for width like page width or full width
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-newsletter-container-{{ ai_gen_id }} {
    {% if block.settings.width == 'page' %}
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    {% else %}
      width: 100%;
      padding: 0;
    {% endif %}
  }

  .ai-newsletter-inner-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-newsletter-subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.form_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.form_max_width }}px;
    {% if block.settings.text_alignment == 'center' %}
      margin: 0 auto;
    {% elsif block.settings.text_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.input_button_gap }}px;
    {% if block.settings.form_layout == 'stacked' %}
      flex-direction: column;
    {% endif %}
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_text_size }}px;
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-newsletter-input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.input_focus_color }};
    outline-offset: 2px;
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: {{ block.settings.input_button_gap }}px;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-form-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stacked' %}
        flex-direction: column;
      {% endif %}
    }

    .ai-newsletter-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-newsletter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-container-{{ ai_gen_id }}">
    <div class="ai-newsletter-inner-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.subtext != blank %}
        <div class="ai-newsletter-subtext-{{ ai_gen_id }}">
          {{ block.settings.subtext }}
        </div>
      {% endif %}

      <div class="ai-newsletter-form-wrapper-{{ ai_gen_id }}">
        {%- form 'customer', class: 'ai-newsletter-form-' | append: ai_gen_id -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <input
            type="email"
            name="contact[email]"
            class="ai-newsletter-input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            placeholder="{{ block.settings.email_placeholder }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
            {% endif %}
            required
          >
          
          <button
            type="submit"
            class="ai-newsletter-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </button>
        {%- endform -%}

        {% if form.posted_successfully? %}
          <div
            id="ai-newsletter-success-{{ ai_gen_id }}"
            class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-success-{{ ai_gen_id }}"
          >
            {{ block.settings.success_message }}
          </div>
        {% endif %}

        {% if form.errors %}
          <div
            id="ai-newsletter-error-{{ ai_gen_id }}"
            class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-error-{{ ai_gen_id }}"
          >
            {{ form.errors.messages.email }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

