{% doc %}
  @prompt
    i need a join our newslatter and get updates section like under they can add email address and then send 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-signup-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-newsletter-signup__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-newsletter-signup__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-newsletter-signup__subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.form_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-newsletter-signup__form-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-newsletter-signup__form-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-newsletter-signup__input-{{ ai_gen_id }} {
    flex: 1;
    min-width: 250px;
    padding: 14px 16px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: 16px;
  }

  .ai-newsletter-signup__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-newsletter-signup__input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_background }};
    outline-offset: 2px;
  }

  .ai-newsletter-signup__button-{{ ai_gen_id }} {
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-newsletter-signup__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-newsletter-signup__message-{{ ai_gen_id }} {
    font-size: 14px;
    margin-top: 8px;
  }

  .ai-newsletter-signup__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-signup__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-signup-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-newsletter-signup__form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-newsletter-signup__input-{{ ai_gen_id }} {
      min-width: 100%;
    }

    .ai-newsletter-signup__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-newsletter-signup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-signup__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-newsletter-signup__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subtext != blank %}
      <div class="ai-newsletter-signup__subtext-{{ ai_gen_id }}">
        {{ block.settings.subtext }}
      </div>
    {% endif %}

    <div class="ai-newsletter-signup__form-wrapper-{{ ai_gen_id }}">
      {% form 'customer', class: 'ai-newsletter-signup__form-' | append: ai_gen_id %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        
        <input
          type="email"
          name="contact[email]"
          class="ai-newsletter-signup__input-{{ ai_gen_id }}"
          value="{{ form.email }}"
          placeholder="{{ block.settings.email_placeholder }}"
          aria-label="Email address"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
          {% endif %}
          {% if form.posted_successfully? %}
            aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
          {% endif %}
          required
        >
        
        <button
          type="submit"
          class="ai-newsletter-signup__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </button>
      {% endform %}

      {% if form.posted_successfully? %}
        <div
          id="ai-newsletter-success-{{ ai_gen_id }}"
          class="ai-newsletter-signup__message-{{ ai_gen_id }} ai-newsletter-signup__success-{{ ai_gen_id }}"
        >
          {{ block.settings.success_message }}
        </div>
      {% endif %}

      {% if form.errors %}
        <div
          id="ai-newsletter-error-{{ ai_gen_id }}"
          class="ai-newsletter-signup__message-{{ ai_gen_id }} ai-newsletter-signup__error-{{ ai_gen_id }}"
        >
          {{ form.errors.messages.email }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

