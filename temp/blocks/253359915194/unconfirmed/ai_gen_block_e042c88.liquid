{% doc %}
  @prompt
    gave me the section for collection like button in one row gave me option for how much button i want to show in that button first the collection name and under that products counts of that collection and gave me the option for background colors and text color and also gave option for width set like page width or full
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-buttons-{{ ai_gen_id }} {
    width: 100%;
    {% if block.settings.container_width == 'page' %}
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    {% endif %}
  }

  .ai-collection-buttons-container-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.button_spacing }}px;
    justify-content: {{ block.settings.alignment }};
  }

  .ai-collection-button-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: {{ block.settings.button_min_width }}px;
    text-align: center;
  }

  .ai-collection-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-collection-button-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_name_size }}px;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .ai-collection-button-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_count_size }}px;
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-buttons-container-{{ ai_gen_id }} {
      gap: {{ block.settings.button_spacing | times: 0.75 }}px;
    }

    .ai-collection-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding | times: 0.75 }}px;
      min-width: {{ block.settings.button_min_width | times: 0.8 }}px;
    }

    .ai-collection-button-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.collection_name_size | times: 0.9 }}px;
    }

    .ai-collection-button-count-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_count_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-buttons-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-buttons-container-{{ ai_gen_id }}">
    {% for i in (1..block.settings.number_of_buttons) %}
      {% liquid
        assign collection_key = 'collection_' | append: i
        assign collection = block.settings[collection_key]
      %}

      {% if collection != blank %}
        <a href="{{ collection.url }}" class="ai-collection-button-{{ ai_gen_id }}">
          <div class="ai-collection-button-name-{{ ai_gen_id }}">
            {{ collection.title }}
          </div>
          <div class="ai-collection-button-count-{{ ai_gen_id }}">
            {{ collection.products_count }} 
            {% if collection.products_count == 1 %}
              product
            {% else %}
              products
            {% endif %}
          </div>
        </a>
      {% else %}
        <div class="ai-collection-button-{{ ai_gen_id }}" style="opacity: 0.5; cursor: default;">
          <div class="ai-collection-button-name-{{ ai_gen_id }}">
            Collection {{ i }}
          </div>
          <div class="ai-collection-button-count-{{ ai_gen_id }}">
            Select collection
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

