{% doc %}
  @prompt
    replicate a clean, modern category overview using rounded purple cards with bold titles, item counts, and a right-side arrow button; provide full theme-editor controls so non-technical merchants can adjust layout, colors, spacing, and which collections appear.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-overview-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-overview__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-category-overview__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-category-overview__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-category-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
  }

  .ai-category-card-{{ ai_gen_id }}:hover {
    transform: translateY({{ block.settings.hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px {{ block.settings.card_shadow_color }};
  }

  .ai-category-card__content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-category-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: {{ block.settings.card_title_weight }};
    color: {{ block.settings.card_title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
  }

  .ai-category-card__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_count_size }}px;
    color: {{ block.settings.card_count_color }};
    margin: 0;
  }

  .ai-category-card__arrow-{{ ai_gen_id }} {
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    background-color: {{ block.settings.arrow_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-left: 16px;
    transition: background-color 0.3s ease;
  }

  .ai-category-card-{{ ai_gen_id }}:hover .ai-category-card__arrow-{{ ai_gen_id }} {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-category-card__arrow-{{ ai_gen_id }} svg {
    width: {{ block.settings.arrow_icon_size }}px;
    height: {{ block.settings.arrow_icon_size }}px;
    stroke: {{ block.settings.arrow_color }};
    stroke-width: 2;
  }

  .ai-category-card-{{ ai_gen_id }}:hover .ai-category-card__arrow-{{ ai_gen_id }} svg {
    stroke: {{ block.settings.arrow_hover_color }};
  }

  .ai-category-overview__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.card_count_color }};
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-category-overview__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-category-overview__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-category-overview__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-category-card__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_title_size | times: 0.9 }}px;
    }

    .ai-category-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-category-overview-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-overview__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-category-overview__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.collection_list != blank %}
      <div class="ai-category-overview__grid-{{ ai_gen_id }}">
        {% for collection in block.settings.collection_list %}
          <a href="{{ collection.url }}" class="ai-category-card-{{ ai_gen_id }}">
            <div class="ai-category-card__content-{{ ai_gen_id }}">
              <h3 class="ai-category-card__title-{{ ai_gen_id }}">{{ collection.title }}</h3>
              <p class="ai-category-card__count-{{ ai_gen_id }}">
                {{ collection.products_count }}
                {% if collection.products_count == 1 %}
                  {{ block.settings.item_text_singular }}
                {% else %}
                  {{ block.settings.item_text_plural }}
                {% endif %}
              </p>
            </div>
            <div class="ai-category-card__arrow-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
                <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-category-overview__empty-{{ ai_gen_id }}">
        Select collections to display in the theme editor
      </div>
    {% endif %}
  </div>
</div>

