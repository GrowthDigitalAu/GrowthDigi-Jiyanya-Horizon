{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-list-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: 40px 20px;
  }

  .ai-collection-list-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .ai-collection-list-wrapper-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .ai-collection-list-wrapper-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-collection-card-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.collections_per_row | minus: 1 }} * 20px)) / {{ block.settings.collections_per_row }});
    min-width: 200px;
    text-align: center;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-collection-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: 8px;
  }

  .ai-collection-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover .ai-collection-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-collection-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-collection-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-collection-count-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-collection-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    transition: opacity 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-nav-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-collection-nav-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    stroke: {{ block.settings.arrow_color }};
  }

  .ai-collection-nav-prev-{{ ai_gen_id }} {
    left: -20px;
  }

  .ai-collection-nav-next-{{ ai_gen_id }} {
    right: -20px;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - 20px) / 2);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-card-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .ai-collection-nav-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<collection-list-{{ ai_gen_id }}
  class="ai-collection-list-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-list-container-{{ ai_gen_id }}">
    <button
      class="ai-collection-nav-{{ ai_gen_id }} ai-collection-nav-prev-{{ ai_gen_id }}"
      aria-label="Previous collections"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>

    <div class="ai-collection-list-wrapper-{{ ai_gen_id }}">
      {% for i in (1..block.settings.collections_per_row) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection = block.settings[collection_key]
        %}

        {% if collection != blank %}
          <a
            href="{{ collection.url }}"
            class="ai-collection-card-{{ ai_gen_id }}"
          >
            <div class="ai-collection-image-wrapper-{{ ai_gen_id }}">
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 500 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="ai-collection-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="500"
                  height="500"
                >
              {% else %}
                <div class="ai-collection-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-collection-info-{{ ai_gen_id }}">
              <h3 class="ai-collection-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
              <p class="ai-collection-count-{{ ai_gen_id }}">
                {{ collection.products_count }}
                {% if collection.products_count == 1 %}
                  product
                {% else %}
                  products
                {% endif %}
              </p>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <button
      class="ai-collection-nav-{{ ai_gen_id }} ai-collection-nav-next-{{ ai_gen_id }}"
      aria-label="Next collections"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </div>
</collection-list-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionList{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.wrapper = this.querySelector('.ai-collection-list-wrapper-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-collection-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-collection-nav-next-{{ ai_gen_id }}');

        if (this.prevButton && this.nextButton) {
          this.setupNavigation();
        }
      }

      setupNavigation() {
        this.prevButton.addEventListener('click', () => {
          const scrollAmount = this.wrapper.offsetWidth * 0.8;
          this.wrapper.scrollBy({
            left: -scrollAmount,
            behavior: 'smooth'
          });
        });

        this.nextButton.addEventListener('click', () => {
          const scrollAmount = this.wrapper.offsetWidth * 0.8;
          this.wrapper.scrollBy({
            left: scrollAmount,
            behavior: 'smooth'
          });
        });
      }
    }

    customElements.define('collection-list-{{ ai_gen_id }}', CollectionList{{ ai_gen_id }});
  })();
</script>

